													<!-- <useIngredientsForColor>false</useIngredientsForColor> -->
												<!-- </value> -->
											<!-- </Operation> -->

										</apply>
									</Operation>
								</apply>
							</Operation>

						</caseTrue>
					</Operation>

						</caseFalse>
					</Operation>

						</caseFalse>
					</Operation>

						</caseTrue>
					</Operation>

				</apply>
			</Operation>
		</apply>
	</XmlExtensions.PatchDef>

</Defs>