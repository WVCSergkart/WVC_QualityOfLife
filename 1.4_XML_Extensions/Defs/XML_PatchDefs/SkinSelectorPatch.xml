						<apply>

							<Operation Class="PatchOperationAdd">
								<xpath>/Defs/XmlExtensions.SettingsMenuDef[defName="Settings_Humanoids_ELFsSkins_WVC"]/settings/li[tag="ELF_SkinSelector"]/settings/li[@WVC_Tag="ELF_SkinSelector_1"]</xpath>
								<value>
