										<key>SkinSelector_{defName_DEF}</key>
										<label>Enable</label>
										<defaultValue>true</defaultValue>
										<tKey>HGS_Global_SingleWordEnable_WVC</tKey>
									</li>
									<li Class="XmlExtensions.Setting.GapLine"/>
								</value>
