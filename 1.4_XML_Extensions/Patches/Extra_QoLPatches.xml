		<key>Extra_QoLPatches_FuckDeteriorateMessage_WVC</key>
		<defaultValue>false</defaultValue>
		<caseTrue>

			<li Class="XmlExtensions.PatchOperationAddOrReplace">
				<xpath>/Defs/ThingDef[apparel]</xpath>
