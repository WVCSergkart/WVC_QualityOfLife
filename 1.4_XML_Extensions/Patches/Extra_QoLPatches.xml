	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>honkai.girls.sergkart</modId>
		<key>Extra_QoLPatches_NotSoAnxious_WVC</key>
		<defaultValue>false</defaultValue>
		<caseTrue>

